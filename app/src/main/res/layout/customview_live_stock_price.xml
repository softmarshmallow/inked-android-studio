<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="142dp"
    android:layout_height="69dp"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/updownMainTagIndicator"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:src="@color/salmon"/>


    <TextView
        android:id="@+id/compCodeTextView"
        style="@style/_002CaptionInk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NKY:IND"/>

    <TextView
        android:id="@+id/compTextView"
        style="@style/_02SubheadingInk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compCodeTextView"
        tools:text="NIKKEI 225"/>

    <TextView
        android:id="@+id/priceTextView"
        style="@style/_01BodyInk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compTextView"
        tools:text="22.21K"/>

    <RelativeLayout
        android:layout_width="53dp"
        android:layout_height="17dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/updownIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/triangle_up"
            />
        <TextView
            android:id="@+id/priceRateText"
            style="@style/_00CaptionInk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="22.21K"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>